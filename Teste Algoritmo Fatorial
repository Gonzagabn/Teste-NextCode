Algoritmo "Fatorial"
//Luiz Gonzaga - ORDDUM

//Principal
inicio  {
int entrada
escreva("\n######## Calculadora de Fatorial ########")
escreva("\n\nDigite o número inteiro que deseja calcular seu fatorial: ")
leia (entrada)
escreva("\n\nO fatorial do número é: ", fatorial(entrada))
} fim

//Função Fatorial
var funcao fatorial(int numero) {
  se (numero >= 0) {
    se (numero == 1 || numero == 0) {
      retorne 1
    } senao {
      retorne numero * fatorial(numero - 1)
    }
  } senao {
    retorne "Não existe fatorial de números negativos!"
  }
}
